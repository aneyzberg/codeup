<div class="container-fluid cover-container">
<h1 align="center">My Preferences</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Bio</th>
      <th>Developer type</th>
      <!--<th>User</th>-->
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user_preferences.each do |user_preference| %>
      <tr>
        <td><%= user_preference.username %></td>
        <td><%= user_preference.bio %></td>
        <td><%= user_preference.developer_type %></td>
        <td><% user_preference.user %></td>
        <td><%= link_to 'Show', user_preference %></td>
        <td><%= link_to 'Edit', edit_user_preference_path(user_preference) %></td>
        <td><%= link_to 'Delete', user_preference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<b><% if policy(UserPreference.new).create? %>
  <%= link_to 'New User preference', new_user_preference_path %></b><br /><br />
  <% end %>
